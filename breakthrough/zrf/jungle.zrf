        (links s
           (X1 d4) (X2 d4) (X3 d4) (X4 d4)
           (Y1 d1) (Y2 d1) (Y3 d1) (Y4 d1)
        )
        (zone (name home)  
           (players Red) 
           (positions Y1 Y2 Y3 Y4)
        )
        (zone (name home)  
           (players Green) 
           (positions X1 X2 X3 X4)
        )
